-- Crear perfiles para usuarios existentes
INSERT INTO public.perfiles_usuario (id, nombre_usuario)
SELECT id, SPLIT_PART(email, '@', 1)
FROM auth.users
WHERE id NOT IN (SELECT id FROM public.perfiles_usuario);

