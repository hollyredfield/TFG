@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply bg-background text-white;
  }
}

@layer components {
  .btn {
    @apply inline-flex items-center justify-center px-4 py-2 rounded-lg transition-all duration-300 font-medium;
  }

  .btn-primary {
    @apply bg-primary hover:bg-primary-dark text-white;
  }

  .btn-secondary {
    @apply bg-secondary hover:bg-secondary-dark text-white;
  }
}
